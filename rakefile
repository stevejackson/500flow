task :default => :server

task :deploy_staging do
  sh %{rsync -avz --delete --exclude '.git' . magellan:/var/www/apps/500flow/staging/public_html/}
end

task :deploy_live do
  sh %{rsync -avz --delete . magellan:/var/www/apps/500flow/live/ --exclude '.git' }
end

task :server do
  sh %x{ruby -rubygems app.rb}
end
